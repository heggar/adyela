rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Development rules - Allow all reads/writes
    // WARNING: These rules allow anyone to read/write. Use only in development!
    match /{allPaths=**} {
      allow read, write: if true;
    }

    // Production rules should be more restrictive:
    // match /user-uploads/{userId}/{fileName} {
    //   allow read: if request.auth != null;
    //   allow write: if request.auth != null && request.auth.uid == userId;
    // }
  }
}
