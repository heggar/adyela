# Application
APP_NAME="Adyela API"
APP_VERSION="0.1.0"
ENVIRONMENT="development"
DEBUG=true
LOG_LEVEL="INFO"

# API
API_V1_PREFIX="/api/v1"
ALLOWED_HOSTS="*"
CORS_ORIGINS="http://localhost:3000,http://localhost:5173"

# Server
HOST="0.0.0.0"
PORT=8000
WORKERS=4

# Security
SECRET_KEY="your-secret-key-here-change-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Firebase (Local Development with Emulators)
FIREBASE_PROJECT_ID="adyela-dev"
# For production, set these:
# FIREBASE_CREDENTIALS_PATH="path/to/credentials.json"
# FIREBASE_API_KEY="your-firebase-api-key"

# Google Cloud
GCP_PROJECT_ID="adyela-dev"
GCP_REGION="us-central1"
USE_SECRET_MANAGER=false

# Firestore Emulator (Local Development)
FIRESTORE_EMULATOR_HOST="localhost:8080"
# Comment out for production use

# Firebase Auth Emulator (Local Development)
FIREBASE_AUTH_EMULATOR_HOST="localhost:9099"
# Comment out for production use

# Redis
REDIS_URL="redis://:dev-redis-password@localhost:6379/0"
REDIS_MAX_CONNECTIONS=10

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Twilio
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# SendGrid
SENDGRID_API_KEY="your-sendgrid-api-key"
SENDGRID_FROM_EMAIL="noreply@adyela.care"

# Jitsi
JITSI_DOMAIN="meet.jit.si"
JITSI_APP_ID="your-jitsi-app-id"
JITSI_API_KEY="your-jitsi-api-key"

# Sentry
SENTRY_DSN="your-sentry-dsn"
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_ENVIRONMENT="development"

# Database
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30
