rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Development rules - Allow all reads/writes
    // WARNING: These rules allow anyone to read/write. Use only in development!
    match /{document=**} {
      allow read, write: if true;
    }

    // Production rules should be more restrictive:
    // match /appointments/{appointmentId} {
    //   allow read: if request.auth != null;
    //   allow write: if request.auth != null && request.auth.token.role in ['doctor', 'admin'];
    // }
  }
}
