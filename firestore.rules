rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // HIPAA-compliant rules for Adyela Health System
    // Only authenticated users with verified email can access
    
    // General rule: Require authentication and email verification
    match /{document=**} {
      allow read, write: if request.auth != null 
        && request.auth.token.email_verified == true;
    }
    
    // Patient data - only accessible by the patient themselves
    match /patients/{patientId} {
      allow read, write: if request.auth != null 
        && request.auth.uid == patientId
        && request.auth.token.email_verified == true;
    }
    
    // Appointments - accessible by patient and assigned doctor
    match /appointments/{appointmentId} {
      allow read, write: if request.auth != null 
        && request.auth.token.email_verified == true
        && (resource.data.patientId == request.auth.uid 
            || resource.data.doctorId == request.auth.uid);
    }
    
    // Medical records - strict access control
    match /medical_records/{recordId} {
      allow read, write: if request.auth != null 
        && request.auth.token.email_verified == true
        && request.auth.token.role in ['doctor', 'admin']
        && resource.data.patientId == request.auth.uid;
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
